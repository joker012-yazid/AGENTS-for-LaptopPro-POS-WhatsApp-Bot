# ========= App =========
APP_NAME=LaptopPro
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# ========= Database =========
SQLITE_PATH=./db/app.sqlite

# ========= Session / Auth (web) =========
SESSION_SECRET=please_change_me_32chars

# ========= CORS (optional) =========
# Pisahkan dengan koma jika banyak origin. Biarkan kosong untuk LAN/dev.
ALLOWED_ORIGINS=

# ========= WhatsApp (Baileys) =========
WA_AUTH_DIR=./auth
WA_MEDIA_DIR=./storage/wa-media
# Had muat turun media (MB) untuk bot
WA_MAX_DOWNLOAD_MB=50

# ========= Dialogflow =========
DIALOGFLOW_PROJECT_ID=your-gcp-project
DIALOGFLOW_LANG=ms
# Di server produksi, gunakan LALUAN MUTLAK (cth: /srv/laptoppro/app/google-sa.json)
GOOGLE_APPLICATION_CREDENTIALS=./google-sa.json

# ========= PDF / Invois =========
PDF_TMP_DIR=./storage/tmp
INVOICE_PREFIX=LP

# ========= Backup =========
BACKUP_TMP_DIR=./storage/tmp

# ========= Cron Peringatan Mengikut SOP =========
# 09:00 setiap hari
CRON_DAILY=0 9 * * *
# Peringatan 1/20/30 hari (diguna dalam kod)
REMIND_OFFSET_DAYS=1,20,30

# ========= Log =========
LOG_DIR=./logs
LOG_LEVEL=info
